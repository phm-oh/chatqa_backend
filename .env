# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://chat:Chat1234@cluster0.q3blicd.mongodb.net/chat

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Email Configuration (สำหรับแจ้งเตือนในอนาคต)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=chat@it.udvc.ac.th
EMAIL_PASS=your-app-password

# Admin Configuration (สำหรับ admin panel ในอนาคต)
ADMIN_EMAIL=chat@it.udvc.ac.th
ADMIN_NAME=ผู้ดูแลระบบ

# File Upload (ถ้าต้องการ upload รูปภาพในอนาคต)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ADMIN_NOTIFICATIONS=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_ETAG=true

# Development Only
DEBUG_MODE=true
MOCK_EMAIL=true